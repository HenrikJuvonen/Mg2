<mg2:DialogBase x:Class="Mg2.Views.AboutView"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:mg2="clr-namespace:Mg2"
                     Width="300" Height="150"
                     ResizeMode="NoResize"
                     WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Margin="6">
            <Label Content="Mg2" FontSize="14" FontWeight="Bold" />
            <Label Content="Written by Henrik Juvonen (github.com/henjuv)" />
        </StackPanel>
        <Button Grid.Row="1" Content="Close" Height="23" Width="70" Margin="6,0,6,6" IsDefault="True" HorizontalAlignment="Right" Command="{Binding CloseCommand}"/>
    </Grid>
</mg2:DialogBase>
